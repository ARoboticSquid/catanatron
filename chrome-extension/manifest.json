{
  "name": "Catanatron - Catan Assistant",
  "version": "1.0",
  "description": "Settlers of Catan assistant when playing online.",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": [
    "debugger",
    "webRequest",
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://colonist.io/*"],
      "js": ["contentScript.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": ["*"],
  "icons": {
    "16": "images/logo16x16.png",
    "32": "images/logo32x32.png",
    "48": "images/logo48x48.png",
    "128": "images/logo128x128.png"
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo16x16.png",
      "32": "images/logo32x32.png",
      "48": "images/logo48x48.png",
      "128": "images/logo128x128.png"
    }
  },
  "manifest_version": 2
}
